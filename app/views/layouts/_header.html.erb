<header class="navbar navbar-inverse">
    <div class="container">
      <%= link_to t(".social_network"), root_path %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to current_user.name, "#" %></li>
            <li><%= link_to t(".home"), root_path %></li>
            <li class="dropdown">
              <%= link_to t(".account"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"} %>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), "#" %></li>
                <li><%= link_to t(".settings"), "#" %></li>
              </ul>
            </li>
            <li>
              <%= link_to t(".log_out"), destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li><%= link_to t(".log_in"), user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
